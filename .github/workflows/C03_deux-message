name: deux message

on: workflow_dispatch

env:
  PUSH: "C'est un push !"
  PULL_REQ:  "C'est une pull request !"

jobs:
  - name: action_push
    if: ${{github.event_name == push}}
    runs-on: ubuntu-latest
    run: echo $PUSH 
  - name: action_pull
    if: ${{github.event_name == pull_request}}
    runs-on: ubuntu-latest
    run: echo $PULL_REQ 

